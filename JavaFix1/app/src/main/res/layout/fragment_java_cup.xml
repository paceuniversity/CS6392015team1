<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.javafix.javafix.JavaCupActivityFragment"
    android:background="@drawable/coffee">

    <TextView
        android:id="@+id/javaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starbucks Coffee Vente"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/JavaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="415mg"
        android:layout_below="@+id/javaTitle"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/JavaDataHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Your Total Caffeine intake today will be..."
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:layout_below="@+id/JavaData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/JavaDataTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="60dp"
        android:text="830mg"
        android:layout_below="@+id/JavaDataHeadline"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="#ff020202" />
    <Button
        android:id="@+id/JavaDataEntryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log"
        android:layout_below="@+id/JavaDataTotal"
        android:layout_marginTop="40dp"
        android:onClick="cupLogged"
        android:textSize="30dp" />
    <Button
        android:id="@+id/JavaDataCancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@+id/JavaDataEntryButton"
        android:layout_marginTop="20dp"
        android:onClick="cupLoggedCancelled"
        android:textSize="30dp" />

</RelativeLayout>
