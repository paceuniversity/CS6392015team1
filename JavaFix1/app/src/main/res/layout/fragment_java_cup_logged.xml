<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.javafix.javafix.JavaCupLoggedActivityFragment"
    android:background="@drawable/coffee">

    <TextView
        android:id="@+id/JavaSuccessHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Cup Logged!"
        android:textSize="30dp"
        android:textColor="#fffff7fd"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/JavaSuccessTotalHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JavaSuccessHeadline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Cups of Coffee today:"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/JavaSuccessTotalData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JavaSuccessTotalHeadline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="2"
        android:textSize="90dp"
        android:textStyle="bold"
        android:textColor="#ff020202" />

    <TextView
        android:id="@+id/JavaSuccessTotalCafHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JavaSuccessTotalData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Total Caffeine:"
        android:textSize="40dp"
        android:textColor="#ffffffff"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/JavaSuccessTotalCafData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="830mg"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_below="@+id/JavaSuccessTotalCafHeadline"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/JavaSuccessButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:onClick="gotoHome"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
